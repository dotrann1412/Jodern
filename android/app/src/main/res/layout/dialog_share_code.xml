<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cartSummaryDialogWrapper"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:padding="16dp"
    android:background="@drawable/shape_cart_sum_container"
    android:orientation="vertical"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mã chia sẻ giỏ hàng"
        android:textColor="@color/text"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center">
        <TextView
            android:layout_marginLeft="10dp"
            android:id="@+id/shareCodeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ABCDEF"
            android:textColor="@color/primary"
            android:textSize="20sp"
            android:textStyle="bold"/>
        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="fitXY"
            android:background="@drawable/card_image_shape"
            android:padding="10dp"
            android:src="@drawable/clipboard"
            app:tint="@color/primary_dark"
            android:id="@+id/copyToClipboardBtn"
            android:contentDescription="Copy to clipboard"/>
    </LinearLayout>

</LinearLayout>